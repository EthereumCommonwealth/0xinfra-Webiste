.Features
  background-color $white
  padding 35px 0
  position relative
  +from-width($sm)
    padding 70px 0
  &-description
    color $dark-blue
    line-height 1.52
    font-size 20px
    margin 50px 0
    +from-width($sm)
      max-width 60%
      margin 50px auto
      font-size 24px
      text-align center
  &-list
    display grid
    grid-gap 1em
    +from-width($sm)
      grid-gap 2em
      grid-template-columns 1fr 1fr
    +from-width($md)
      grid-template-columns 1fr 1fr 1fr
