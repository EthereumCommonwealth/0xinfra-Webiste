.WhoIsUsing
  background-color #FFF
  padding 35px 0
  position relative
  +from-width($sm)
    padding 70px 0
  &-list
    display grid
    grid-gap 1em
    margin-top 1em
    justify-items center
    +from-width($sm)
      margin-top 2em
      grid-template-columns 1fr 1fr
    +from-width($md)
      margin-top 3em
      grid-template-columns 1fr 1fr 1fr
  &-element
    &-figure
      width 250px
      +from-width($sm)
        width 300px
      img
        width 100%
