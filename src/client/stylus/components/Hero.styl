.Hero
  background-color $green
  padding 110px 0
  &-title
    margin 0
    font-family $primary-font
    font-size 22px
    line-height 0.94
    color $dark-blue
    +from-width($sm)
      font-size 28px
    +from-width($md)
      font-size 60px
  &-description
    line-height 1.64
    color $dark-blue
    margin 2em 0
    +from-width($sm)
      font-size 18px
  &-content
    display grid
    grid-template-columns 1.5fr 1fr
    grid-gap 2em
    &-right
      justify-self center
